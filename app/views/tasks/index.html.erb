<h1>My tasks </h1>

<% @tasks.each do |task| %>
  <div class="task">
    <label>
      <%= check_box_tag "completed_task_ids[]", task.id, false %>
      <%= link_to task.title, task_path(task)  %>
      <%= link_to "X",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %></label>
   
  </div>
<% end %>
<%= link_to "Add to new task", tasks_new_path %>


